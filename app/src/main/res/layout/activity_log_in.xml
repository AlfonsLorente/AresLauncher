<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_rl"
    android:background="@drawable/menubackground1080"
    tools:context=".LogInActivity">
    <ImageView
        style="@style/MenuSwordL"
        ></ImageView>

    <ImageView style="@style/MenuSwordR"></ImageView>
    <ImageView
        style="@style/MenuHelmet"
        ></ImageView>

    <RelativeLayout
        android:id="@+id/rltitle_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/login_title"
            style="@style/MenuTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />
    </RelativeLayout>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/linearLayout1_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rltitle_login"
        android:orientation="vertical"
        android:gravity="center">

        <EditText
            android:id="@+id/username_login"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:ems="10"
            android:fontFamily="@font/greek"
            android:gravity="center"
            android:hint="USERNAME"
            android:inputType="textPersonName"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowRadius="1"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />

        <EditText

            android:layout_marginTop="30dp"
            android:id="@+id/password_login"
            android:layout_width="215dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/greek"
            android:gravity="center"

            android:hint="PASSWORD"
            android:inputType="textPassword"
            android:shadowColor="@color/black"
            android:shadowDx="1"
            android:shadowRadius="1"
            android:text=""
            android:textSize="25dp"
            android:textStyle="bold" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1_login"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_register_login"
            android:layout_width="wrap_content"
            android:padding="5dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"

            android:background="@drawable/button_login"
            android:fontFamily="@font/greek"
            android:soundEffectsEnabled="false"
            android:text="REGISTER"
            android:textSize="25dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/button_login"
            android:fontFamily="@font/greek"
            android:padding="5dp"
            android:soundEffectsEnabled="false"
            android:text="ENTER"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>