<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login_rl"
    android:background="@drawable/menubackground1080"
    tools:context=".MenuActivity">
    <ImageView
        style="@style/MenuSwordL"
        ></ImageView>

    <ImageView style="@style/MenuSwordR"></ImageView>
    <ImageView
        style="@style/MenuHelmet"
        ></ImageView>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/rltitle">

        <TextView
            android:id="@+id/menu_title_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            style="@style/MenuTitle"/>
    </RelativeLayout>

    <EditText
        android:id="@+id/username_login"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="172dp"
        android:ems="10"
        android:fontFamily="@font/greek"
        android:hint="USERNAME"
        android:inputType="textPersonName"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password_login"
        android:layout_width="215dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="42dp"
        android:layout_marginTop="229dp"
        android:ems="10"
        android:fontFamily="@font/greek"
        android:hint="PASSWORD"
        android:inputType="textPersonName"
        android:shadowColor="@color/black"
        android:shadowDx="1"
        android:shadowRadius="1"
        android:text=""
        android:textSize="20dp"
        android:textStyle="bold" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="196dp"
        android:layout_marginEnd="38dp"
        android:background="@drawable/button_login"
        android:fontFamily="@font/greek"
        android:text="ENTER"
        android:textSize="20dp"
        android:textStyle="bold"
        android:soundEffectsEnabled="false"/>


</RelativeLayout>